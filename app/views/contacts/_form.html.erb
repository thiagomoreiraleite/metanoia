<div class="contact-form">
  <%= form_for @contact do |f| %>

  <% if flash[:error].present? %>
      <p> <%= flash[:error] %> </p>
  <% end %>
  <div>
    <div>
      <%= f.text_field :name, required: true, placeholder: "Seu nome" %>
    </div>
    <div>
      <%= f.text_field :email, required: true, placeholder: "Seu e-mail" %>
    </div>
  </div>
  <div>
    <%= f.text_area :message, as: :text, placeholder: "Sua mensagem" %>
  </div>

  <div style="display: none;">
  <%= f.label :nickname %> <br>
  <%= f.text_field :nickname, hint: 'leave this field blank' %>
  </div>

  <div>
    <%= f.submit 'Enviar', class: "form-btn" %>
  </div>
  <% end %>
</div>